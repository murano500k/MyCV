<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bgSkillsSection"
                app:cardElevation="@dimen/cardview_default_elevation"
                android:layout_marginTop="@dimen/content_text_margin"
                android:layout_marginBottom="@dimen/content_text_margin"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.CardHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Technologies"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_skills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/bgSkills"

                android:layout_marginTop="@dimen/content_text_margin"
                android:layout_marginBottom="@dimen/content_text_margin"
                app:cardElevation="@dimen/cardview_default_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.CardHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        />

                    <TextView
                        style="@style/TextAppearance.Header"

                        android:id="@+id/text_university"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/card_margin"
                        android:layout_marginStart="@dimen/card_margin"
                        android:text="Very Good Transfer"
                        />

                    <TextView
                        android:id="@+id/text_period"
                        style="@style/TextAppearance.Period"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="@dimen/card_margin"
                        android:layout_marginStart="@dimen/card_margin"
                        android:text="Very Good Transfer"/>

                    <TextView
                        android:id="@+id/text_faculty"
                        style="@style/TextAppearance.Content"
                        android:layout_width="match_parent"

                        android:layout_marginEnd="@dimen/card_margin"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_height="wrap_content"
                        android:text="Very Good Transfer"/>

                    <TextView
                        android:id="@+id/text_degree"
                        style="@style/TextAppearance.Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Very Good Transfer"

                        android:layout_marginEnd="@dimen/card_margin"
                        android:layout_marginStart="@dimen/card_margin"
                        />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/content_text_margin"
                android:layout_marginBottom="@dimen/content_text_margin"
                app:cardBackgroundColor="@color/bgSkills"
                app:cardElevation="@dimen/cardview_default_elevation"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.CardHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Certificates"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.Header"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/card_margin"
                            android:layout_marginStart="@dimen/card_margin"
                            android:gravity="center_vertical"
                            android:text="Android S Workshops"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="8dp"
                            android:src="@drawable/ic_gl"/>
                    </LinearLayout>

                    <TextView
                        style="@style/TextAppearance.Content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/desc_gl_training"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:cardBackgroundColor="@color/bgWorkSection"
                app:cardElevation="@dimen/cardview_default_elevation"

                android:layout_marginTop="@dimen/content_text_margin"
                android:layout_marginBottom="@dimen/content_text_margin"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.CardHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Work Experience"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Overall 2+ years of android applications development experience"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"

                        />
                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>