<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/CardStyle.Parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.CardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education"
            />

        <TextView
            style="@style/TextAppearance.Header"
            android:id="@+id/text_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Good Transfer"
            />

        <TextView
            android:id="@+id/text_period"
            style="@style/TextAppearance.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Good Transfer" />

        <TextView
            android:id="@+id/text_faculty"
            style="@style/TextAppearance.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Good Transfer"/>

        <TextView
            android:id="@+id/text_degree"
            style="@style/TextAppearance.Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Good Transfer" />


    </LinearLayout>

</android.support.v7.widget.CardView>